<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/feed_type"
        android:layout_width="48dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="-12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_media_audio" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/feed_type"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:minHeight="48dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed_label"
            style="@style/ListItem.Title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:minWidth="140dp"
            tools:text="Premium" />

        <TextView
            android:id="@+id/feed_label_caption"
            style="@style/ListItem.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            tools:text="audio/mp3" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/divider"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright" />
</RelativeLayout>
